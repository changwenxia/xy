    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "lerna": "^3.11.1",
    "lerna-changelog": "^0.8.2",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "sass-loader": "^7.1.0",
    "vuepress": "^1.0.0-alpha.47",
    "xy-tools": "^0.0.4"
