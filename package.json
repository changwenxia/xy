{
  "name": "xy",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "diff": "lerna diff",
    "new-version": "lerna version",
    "bootstrap": "lerna bootstrap",
    "docs:dev": "vuepress dev docs",
    "lint": "eslint --ext .js packages",
    "docs:build": "vuepress build docs",
    "build": "xy-tools build theme && xy-tools build component",
    "cli:watch": "tsc -w -p ./packages/cli/",
